/*  overflow:hidden;  	内容会被修剪，并且其余内容是不可见的。 */
.userinfo-avatar {  
  overflow:hidden;   
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin: 80rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

